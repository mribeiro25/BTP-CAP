{
  "name": "AlunosMig",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/attachments": "^1.1.6",
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/textbundle": "^5.2.0",
    "express": "^4"
  },
  "cds": {
    "i18n": {
      "default_language": "pt",
      "folders": [
        "_i18n",
        "i18n",
        "assets/i18n"
      ]
    },
    "fiori": {
      "draft_deletion_timeout": "1d"
    }
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "@sap/ux-specification": "^1.120.17",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-btpcaptreinamento": "cds watch --open btpcaptreinamento/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy AlunosMig --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-btpcursos": "cds watch --open btpcursos/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-estudantesbycurso": "cds watch --open estudantesbycurso/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "sapux": [
    "app/btpcaptreinamento",
    "app/btpcursos",
    "app/estudantesbycurso"
  ]
}
